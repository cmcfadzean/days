<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :photo do %>
    <%= form.radio_button :photo, "" %>
    No Photo
  <% end %>

  <% @photos.each do |photo| %>
    <%= form.label :photo, class: "gram-event__label" do %>
      <%= form.radio_button :photo, photo.urls.regular %>
      <%= image_tag(photo.urls.regular, class: "gram-event__photo") %>
    <% end %>
  <% end %>

  <div class="field">
    <%= form.text_field :title %>
  </div><br>

  <div class="field">
    <%= form.select :bucket, options_for_select([["Select Type...",""],"Personal", "Work", "Relationship"]) %>
  </div><br>

  <div class="field">
    <%= form.date_select :event_date %>
  </div><br>

  <div class="actions">
    <%= form.submit %>
  </div><br>
<% end %>
