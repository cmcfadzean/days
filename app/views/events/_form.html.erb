<%= form_tag( edit_event_path(event), method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag 'Search' %>
<% end %>

<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :type, options_for_select([["Select Type...",""],"Personal", "Work", "Relationship"]) %>
  </div>

  <div class="field">
    <%= form.label :event_date %>
    <%= form.date_select :event_date %>
  </div>

  <% @photos.each do |photo| %>
    <%= image_tag(photo.urls.regular) %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
